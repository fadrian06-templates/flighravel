{
  "require": {
    "php": "^8.2",
    "flightphp/core": "^3.14"
  },
  "autoload": {
    "psr-4": {
      "App\\": "app"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests"
    }
  },
  "scripts": {
    "pre-install-cmd": "composer run post-create-project-cmd",
    "pre-update-cmd": "composer run post-create-project-cmd",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "php -S 0.0.0.0:61001"
    ],
    "post-create-project-cmd": [
      "php -r \"if (!file_exists('.env.php')) copy('.env.dist.php', '.env.php');\""
    ],
    "ci": [
      "composer check-platform-reqs --no-ansi",
      "phpunit --colors=never",
      "phpstan -cphpstan.neon --no-progress --no-ansi",
      "rector --dry-run --no-progress-bar --no-ansi"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.9",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "phpunit/phpunit": "^11.5",
    "rector/rector": "^2.0",
    "symfony/var-dumper": "^7.2"
  }
}
